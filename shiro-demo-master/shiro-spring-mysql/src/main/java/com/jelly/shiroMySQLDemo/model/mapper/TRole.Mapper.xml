<mapper namespace="com.jelly.shiroMySQLDemo.model.TRole">
	<!-- 生成Insert -->
        	<insert id="Insert" useGeneratedKeys="true" keyProperty="ID" parameterType="com.jelly.shiroMySQLDemo.model.TRole">
			insert into T_ROLE (
				<trim suffixOverrides=",">
                            <if test="id != null and id != ''">
							ID,
                            </if>

                            <if test="roName != null and roName != ''">
							RO_NAME,
                            </if>

				</trim>
			) values (
				<trim suffixOverrides=",">
                            <if test="id != null and id != ''">
                                #{id},
                            </if>
                            <if test="roName != null and roName != ''">
                                #{roName},
                            </if>
				</trim>
			)
		</insert>

	<!-- 生成Update -->
    <!-- 注意调用该SQL前必须检查参数的正确性，否则可能会误更新 -->
	<update id="Update" parameterType="com.jelly.shiroMySQLDemo.model.TRole">
		update T_ROLE set 
		<trim suffixOverrides=",">
                    <if test="id != null and id != ''">
                    	ID = #{id},
                    </if>
                    <if test="roName != null and roName != ''">
                    	RO_NAME = #{roName},
                    </if>
		</trim>
        where
                <if test="id != null and id != ''">
				ID = #{id}
                </if>
            
	</update>

    <!-- 生成UpdateWithNull -->
    <!-- 注意调用该SQL前必须先根据主键查询出该记录所有列数据，再设置某列为null -->
    <update id="UpdateWithNull" parameterType="com.jelly.shiroMySQLDemo.model.TRole">
        update T_ROLE set
        <trim suffixOverrides=",">
			ID = #{id},
			RO_NAME = #{roName},
        </trim>
        where
		ID = #{id}
			
    </update>
	
	<!-- 根据表的主键生成Delete -->
		<delete id="DeleteByPk" parameterType="java.io.Serializable">
			
			delete 
			from T_ROLE 
			where 
				ID = #{id}
				
		</delete>
	<!-- 注意调用该SQL前必须检查参数的正确性，否则可能会误删除 -->
	<delete id="DeleteByPojo" parameterType="com.jelly.shiroMySQLDemo.model.TRole">
		<!-- 请注意，该表没有主键 -->
		delete
		from T_ROLE
		where
        <trim suffixOverrides="and">
                <if test="id != null and id != ''">
					ID = #{id} and
                </if>
                <if test="roName != null and roName != ''">
					RO_NAME = #{roName} and
                </if>
		</trim>
	</delete>

	<!-- 生成Select通用表头 -->
	<sql id="SelectColumns">
		<trim suffixOverrides=",">
				ID as "id",
				RO_NAME as "roName",
		</trim>
	</sql>
	
	<!-- 生成Select通用查询条件 -->
	<sql id="SelectWheres">
                <if test="id != null and id != ''">
                    and ID = #{id}
                </if>
                <if test="roName != null and roName != ''">
                    and RO_NAME = #{roName}
                </if>
	</sql>
	
	<!-- 生成Select -->
	<select id="Select" parameterType="com.jelly.shiroMySQLDemo.model.TRole" resultType="com.jelly.shiroMySQLDemo.model.TRole">
		select
		<include refid="SelectColumns"/>
		from T_ROLE
		where 1 = 1
		<include refid="SelectWheres"/>
	</select>

    <!-- 生成SelectCount -->
    <select id="SelectCount" parameterType="com.jelly.shiroMySQLDemo.model.TRole" resultType="Long">
        select count(*) ct
        from T_ROLE
        <where>
            <include refid="SelectWheres"/>
        </where>
    </select>

    <!-- 根据表的主键生成SelectByPk，该表只有单列主键 -->
	<select id="SelectByPk" parameterType="java.io.Serializable" resultType="com.jelly.shiroMySQLDemo.model.TRole">
		select
		<include refid="SelectColumns"/>
		from T_ROLE
		where
				ID = #{id}
			
	</select>
</mapper>